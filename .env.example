# Database Configuration
DB_HOST=localhost            # The hostname of the database server, typically 'localhost' for local development
DB_USERNAME=username         # The username used to connect to the database
DB_PASSWORD=password         # The password used to connect to the database
DB_DATABASE=myvivarium       # The name of the database to be used

# SMTP (Email) Configuration
SMTP_HOST=smtp.example.com   # The SMTP server address used for sending emails
SMTP_PORT=587                # The port number used by the SMTP server (587 is typically used for TLS)
SMTP_USERNAME=username       # The username used to authenticate with the SMTP server
SMTP_PASSWORD=password       # The password used to authenticate with the SMTP server
SMTP_ENCRYPTION=tls          # The encryption method used by the SMTP server (e.g., 'tls' or 'ssl')
SENDER_EMAIL=sender@example.com  # The email address used as the sender for outgoing emails
SENDER_NAME=MyVivarium       # The name displayed as the sender for outgoing emails

